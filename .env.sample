# Copy this file to .env and edit values as needed.
# Use: export $(grep -v '^#' .env | xargs) && ./mvnw spring-boot:run

# Datasource (Oracle by default). To run locally with H2 set DB_URL accordingly and DB_DRIVER.
DB_URL=jdbc:oracle:thin:@oracle.fiap.com.br:1521:ORCL
DB_USER={your_db_user}
DB_PASS={your_db_password}
DB_DRIVER=oracle.jdbc.OracleDriver

# Flyway
FLYWAY_ENABLED=true
FLYWAY_LOCATIONS=classpath:db/migration

# JPA / Hibernate
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
HIBERNATE_DIALECT=org.hibernate.dialect.OracleDialect

# Thymeleaf
THYMELEAF_CACHE=false
THYMELEAF_PREFIX=classpath:/templates/
THYMELEAF_SUFFIX=.html

# Cache
SPRING_CACHE_TYPE=simple

# Logging levels (INFO, DEBUG, TRACE, etc.)
LOG_ORG_THYMELEAF=INFO
LOG_ORG_FLYWAYDB=INFO
LOG_SPRING_SECURITY=DEBUG
LOG_SPRING_SECURITY_PROVIDER=TRACE
LOG_SPRING_SECURITY_DAO=TRACE

# Optional: run the app locally using H2 for development (uncomment to use)
# DB_URL=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
# DB_DRIVER=org.h2.Driver
# DB_USER=sa
# DB_PASS=
# FLYWAY_ENABLED=false
# JPA_DDL_AUTO=create-drop
# HIBERNATE_DIALECT=org.hibernate.dialect.H2Dialect

# Profile
#SPRING_PROFILES_ACTIVE=dev
